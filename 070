# creator
owner=nathans@sgi.com

seq=`basename $0`
echo "QA output created by $seq"

here=`pwd`
tmp=/tmp/$$
status=1	# failure is the default!
trap "_cleanup; exit \$status" 0 1 2 3 15

_cleanup()
{
    cd /
    rm -f $tmp.*
    _cleanup_testdir
}

# get standard environment, filters and checks
. ./common.rc
. ./common.filter
. ./common.attr

# real QA test starts here
_supported_fs generic
_supported_os IRIX Linux

_require_attrs

_setup_testdir

$FSSTRESS_PROG \
	-d $testdir/fsstress \
	-f allocsp=0 \
	-f freesp=0 \
	-f bulkstat=0 \
	-f bulkstat1=0 \
	-f resvsp=0 \
	-f unresvsp=0 \
	-f attr_set=100 \
	-f attr_remove=100 \
	-S -p 1 -n 10000 >$seq.full 2>&1

status=$?
exit
